{
    "name": "rapidez/core",
    "description": "Rapidez Core",
    "keywords": [
        "rapidez"
    ],
    "homepage": "https://rapidez.io",
    "authors": [
        {
            "name": "Roy Duineveld",
            "email": "royduineveld@gmail.com",
            "homepage": "https://royduineveld.nl",
            "role": "Developer"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.4|^8.0",
        "cviebrock/laravel-elasticsearch": "^8.0",
        "illuminate/database": "^8.0",
        "illuminate/events": "^8.0",
        "illuminate/queue": "^8.0",
        "illuminate/support": "^8.0",
        "tormjens/eventy": "^0.6"
    },
    "require-dev": {
        "laravel/dusk": "^6.9",
        "orchestra/testbench": "^6.4",
        "orchestra/testbench-dusk": "^6.4",
        "phpunit/phpunit": "^9.4"
    },
    "autoload": {
        "psr-4": {
            "Rapidez\\Core\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Rapidez\\Core\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Rapidez\\Core\\RapidezServiceProvider"
            ],
            "aliases": {
                "Rapidez": "Rapidez\\Core\\RapidezFacade"
            }
        }
    },
    "scripts": {
        "dusk:prepare": [
            "./vendor/bin/dusk-updater detect --auto-update",
            "@php -r \"file_exists('phpunit.dusk.xml') || copy('phpunit.dusk.xml.dist', 'phpunit.dusk.xml'); \""
        ],
        "dusk:assets": [
            "yarn install --frozen-lockfile",
            "yarn run prod",
            "cp -r public/. vendor/orchestra/testbench-dusk/laravel/public/"
        ],
        "dusk:test": ["./vendor/bin/phpunit -c phpunit.dusk.xml --colors=always"]
    }
}
